<h1>Listing statuses</h1>

<table>
  <thead>
    <tr>
      <th>Onion</th>
      <th>Status</th>
      <th>Response</th>
      <th>Delivery</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.onion %></td>
        <td><%= status.status %></td>
        <td><%= status.response %></td>
        <td><%= status.delivery %></td>
        <td><%= status.date %></td>
        <td><%= link_to 'Show', status %></td>
        <td><%= link_to 'Edit', edit_status_path(status) %></td>
        <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

